<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guidance Dashboard</title>
    <link rel="stylesheet" href="/guidance.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Professional Red and White Theme */
        :root {
            --primary-red: #DC2626;
            --light-red: #FEF2F2;
            --accent-red: #F87171;
            --white: #FFFFFF;
            --gray-50: #F9FAFB;
            --gray-100: #F3F4F6;
            --gray-200: #E5E7EB;
            --gray-300: #D1D5DB;
            --gray-600: #4B5563;
            --gray-700: #374151;
            --gray-800: #1F2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --dark-red: #B91C1C;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--gray-50);
            min-height: 100vh;
            color: var(--gray-900);
        }

        /* Sidebar Drawer */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 280px;
            background: linear-gradient(180deg, var(--primary-red) 0%, var(--dark-red) 100%);
            color: #fff;
            padding: 24px 20px;
            box-shadow: var(--shadow-lg);
            display: flex;
            flex-direction: column;
            gap: 20px;
            z-index: 1000;
        }

        .sidebar .brand {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 8px;
            padding-bottom: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar .brand img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: #fff;
            padding: 6px;
            flex-shrink: 0;
        }

        .sidebar .brand .school-name-text {
            font-size: 15px;
            font-weight: 700;
            line-height: 1.3;
            color: #fff;
        }

        .sidebar .nav {
            display: flex;
            flex-direction: column;
            gap: 4px;
            margin-top: 12px;
        }

        .sidebar .nav a {
            color: #fff;
            text-decoration: none;
            padding: 12px 16px;
            border-radius: 10px;
            background: rgba(255,255,255,0.05);
            transition: all 0.2s ease;
            font-weight: 500;
            font-size: 14px;
            letter-spacing: 0.3px;
            position: relative;
            overflow: hidden;
        }

        .sidebar .nav a::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 4px;
            height: 100%;
            background: #fff;
            transform: scaleY(0);
            transition: transform 0.2s ease;
        }

        .sidebar .nav a:hover::before,
        .sidebar .nav a.active::before {
            transform: scaleY(1);
        }

        .sidebar .nav a:hover { 
            background: rgba(255,255,255,0.15);
            padding-left: 20px;
        }

        .sidebar .nav a.active { 
            background: #fff;
            color: var(--primary-red);
            font-weight: 700;
            padding-left: 20px;
        }

        .sidebar .spacer { flex: 1; }

        .sidebar .logout-btn {
            display: inline-block;
            color: #fff;
            text-decoration: none;
            padding: 12px 16px;
            border-radius: 10px;
            background: rgba(255,255,255,0.1);
            font-weight: 700;
            text-align: center;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .sidebar .logout-btn:hover { 
            background: rgba(255,255,255,0.2);
            transform: translateX(3px);
        }

        main {
            max-width: 1400px;
            margin: 0 0 40px 280px;
            padding: 0;
            background: var(--gray-50);
            min-height: 100vh;
            transition: margin-left 0.3s ease-in-out;
        }

        .dashboard-container {
            background: var(--white);
            margin: 32px 32px;
            border-radius: 12px;
            padding: 32px;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--gray-100);
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--gray-200);
        }

        .dashboard-header h1 {
            color: var(--gray-900);
            font-size: 28px;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .dashboard-header h1::before {
            content: '';
            width: 4px;
            height: 28px;
            background: var(--primary-red);
            margin-right: 12px;
        }

        .date {
            color: var(--gray-600);
            font-size: 14px;
            font-weight: 500;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: var(--white);
            color: var(--gray-900);
            padding: 32px;
            border-radius: 12px;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--gray-100);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-red) 0%, var(--accent-red) 100%);
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-xl);
        }

        .stat-card h3 {
            font-size: 13px;
            opacity: 0.85;
            margin-bottom: 12px;
            font-weight: 600;
            color: var(--gray-600);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card .number {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--primary-red);
            line-height: 1;
        }

        .stat-card .trend {
            font-size: 12px;
            opacity: 0.75;
            color: var(--gray-600);
        }

        .chart-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .chart-card {
            background: var(--white);
            padding: 32px;
            border-radius: 12px;
            border: 1px solid var(--gray-100);
            box-shadow: var(--shadow-md);
            transition: all 0.3s ease;
        }

        .chart-card:hover {
            box-shadow: var(--shadow-lg);
        }

        .chart-card h2 {
            color: var(--gray-900);
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
        }

        .chart-card h2::before {
            content: '';
            width: 4px;
            height: 18px;
            background: var(--primary-red);
            margin-right: 12px;
        }

        .chart-svg {
            width: 100%;
            height: 250px;
        }

        .analytics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .analytics-card {
            background: var(--white);
            border: 1px solid var(--gray-100);
            padding: 24px;
            border-radius: 12px;
            box-shadow: var(--shadow-md);
            transition: all 0.3s ease;
        }

        .analytics-card:hover {
            box-shadow: var(--shadow-lg);
        }

        .analytics-card h2 {
            color: var(--gray-900);
            font-size: 16px;
            font-weight: 700;
            margin-bottom: 16px;
        }

        .mini-table {
            width: 100%;
            border-collapse: collapse;
        }

        .mini-table thead {
            background: var(--gray-50);
        }

        .mini-table th {
            text-align: left;
            padding: 12px;
            font-size: 12px;
            color: var(--gray-700);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--gray-200);
        }

        .mini-table td {
            padding: 12px;
            border-bottom: 1px solid var(--gray-100);
            font-size: 14px;
            color: var(--gray-900);
        }

        .mini-table tbody tr:hover {
            background: var(--gray-50);
        }

        .mini-table .numeric {
            text-align: right;
        }

        .analytics-note {
            margin-top: 12px;
            color: var(--gray-600);
            font-size: 13px;
        }

        .empty-row {
            text-align: center;
            padding: 20px 12px;
            color: var(--gray-500);
            font-size: 14px;
        }

        .requests-list {
            margin-top: 40px;
        }

        .requests-list h2 {
            color: var(--gray-900);
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
        }

        .requests-list h2::before {
            content: '';
            width: 4px;
            height: 20px;
            background: var(--primary-red);
            margin-right: 12px;
        }

        .requests-list-container {
            background: var(--white);
            border-radius: 12px;
            border: 1px solid var(--gray-100);
            box-shadow: var(--shadow-md);
            overflow: hidden;
        }

        .requests-table {
            width: 100%;
            border-collapse: collapse;
            background: var(--white);
        }

        .requests-table thead {
            background: var(--gray-50);
            border-bottom: 2px solid var(--gray-200);
        }

        .requests-table th {
            padding: 16px 24px;
            text-align: left;
            font-weight: 600;
            font-size: 12px;
            color: var(--gray-700);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .requests-table td {
            padding: 16px 24px;
            border-bottom: 1px solid var(--gray-100);
            font-size: 14px;
            color: var(--gray-900);
        }

        .requests-table tbody tr:hover {
            background: var(--gray-50);
            transition: background 0.2s ease;
        }

        .requests-table tbody tr:last-child td {
            border-bottom: none;
        }

        .status-pill {
            padding: 6px 14px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .status-pending {
            background: #FEF3C7;
            color: #B45309;
            border: 1px solid #FCD34D;
        }

        .status-approved {
            background: #DCFCE7;
            color: #166534;
            border: 1px solid #BBF7D0;
        }

        .status-completed {
            background: #FEE2E2;
            color: #991B1B;
            border: 1px solid #FECACA;
        }

        @media (max-width: 1024px) {
            .sidebar {
                width: 250px;
            }

            main {
                margin-left: 250px;
            }

            .dashboard-container {
                margin: 24px 16px;
                padding: 24px;
            }

            .stats-grid {
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 16px;
                margin-bottom: 24px;
            }

            .chart-container {
                gap: 16px;
                margin-bottom: 24px;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                padding: 16px;
                gap: 12px;
            }

            main {
                margin-left: 200px;
                margin-top: 0;
            }

            .dashboard-container {
                margin: 16px 12px;
                padding: 16px;
                border-radius: 12px;
            }

            .dashboard-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
                margin-bottom: 20px;
            }

            .dashboard-header h1 {
                font-size: 22px;
            }

            .date {
                width: 100%;
            }

            .stats-grid {
                grid-template-columns: 1fr;
                gap: 12px;
                margin-bottom: 20px;
            }

            .stat-card {
                padding: 20px;
            }

            .stat-card .number {
                font-size: 28px;
            }

            .chart-container {
                grid-template-columns: 1fr;
                gap: 12px;
                margin-bottom: 20px;
            }

            .analytics-grid {
                grid-template-columns: 1fr;
                gap: 12px;
                margin-bottom: 20px;
            }

            .requests-table th,
            .requests-table td {
                padding: 12px;
                font-size: 13px;
            }

            .requests-list h2 {
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    <aside class="sidebar">
        <div class="brand">
            <img src="/pictures/SchoolLogo-removebg-preview.png" alt="School Logo">
            <span class="school-name-text">Mainaga San Francisco Integrated School</span>
        </div>
        <nav class="nav">
            <a href="/guidance/dashboard" class="<%= activePage === 'dashboard' ? 'active' : '' %>">üìã Dashboard</a>
            <a href="/guidance/document-requests" class="<%= activePage === 'document-requests' ? 'active' : '' %>">üìÅ Document Requests</a>
            <a href="/guidance/behavior-analytics" class="<%= activePage === 'behavior-analytics' ? 'active' : '' %>">üìä Behavior Analytics</a>
            <a href="/guidance/recommendations" class="<%= activePage === 'recommendations' ? 'active' : '' %>">üí° Recommendations</a>
            <a href="/guidance/sent-messages" class="<%= activePage === 'sent-messages' ? 'active' : '' %>">üìã Sent Messages</a>
            <a href="/guidance/behavior-archive" class="<%= activePage === 'behavior-archive' ? 'active' : '' %>">üì¶ Archived Reports</a>
            <a href="/guidance/analytics" class="<%= activePage === 'analytics' ? 'active' : '' %>">üîí Security</a>
        </nav>
        <div class="spacer"></div>
        <a class="logout-btn" href="/guidance/logout">Logout</a>
    </aside>

    <main>
        <div class="dashboard-container">
            <div class="dashboard-header">
                <h1>Document Requests Dashboard</h1>
                <div class="date" id="currentDate"></div>
                <form id="dateFilterForm" method="get" action="/guidance/dashboard" style="display:flex; gap:10px; align-items:center;">
                    <label style="font-weight:600; color:#555; font-size:13px;">From</label>
                    <input type="date" name="from" id="filterFrom" value="<%= from || '' %>" style="padding:6px; border:1px solid #ddd; border-radius:6px;" />
                    <label style="font-weight:600; color:#555; font-size:13px;">To</label>
                    <input type="date" name="to" id="filterTo" value="<%= to || '' %>" style="padding:6px; border:1px solid #ddd; border-radius:6px;" />
                    <button type="submit" class="send-btn" style="padding:8px 10px; font-size:13px;">Apply</button>
                    <a href="/guidance/dashboard" class="send-btn" style="background:#6b7280; padding:8px 10px; text-decoration:none; display:inline-block; font-size:13px;">Clear</a>
                </form>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Requests</h3>
                    <div class="number"><%= typeof totalRequests !== 'undefined' ? totalRequests : (requests && requests.length) || 0 %></div>
                    <div class="trend">All time</div>
                </div>
                <div class="stat-card">
                    <h3>Pending</h3>
                    <div class="number"><%= typeof pendingRequests !== 'undefined' ? pendingRequests : 0 %></div>
                    <div class="trend">Awaiting action</div>
                </div>
                <div class="stat-card">
                    <h3>Approved</h3>
                    <div class="number"><%= typeof approvedRequests !== 'undefined' ? approvedRequests : 0 %></div>
                    <div class="trend">Ready for fulfillment</div>
                </div>
                <div class="stat-card">
                    <h3>Completed</h3>
                    <div class="number"><%= typeof completedRequests !== 'undefined' ? completedRequests : 0 %></div>
                    <div class="trend">Fulfilled</div>
                </div>
            </div>

            <div class="analytics-grid">
                <div class="analytics-card">
                    <h2>Requests by Document</h2>
                    <table class="mini-table">
                        <thead>
                            <tr><th>Document Type</th><th class="numeric">Count</th></tr>
                        </thead>
                        <tbody>
                            <% if (countsByType && countsByType.length) { %>
                                <% countsByType.forEach(function(ct){ %>
                                    <tr>
                                        <td><%= ct.type %></td>
                                        <td class="numeric"><%= ct.count %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="2" class="empty-row">No type data</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <div class="analytics-card">
                    <h2>Monthly Summary</h2>
                    <table class="mini-table">
                        <thead>
                            <tr><th>Month</th><th class="numeric">Requests</th></tr>
                        </thead>
                        <tbody>
                            <% if (monthlySummary && monthlySummary.length) { %>
                                <% monthlySummary.forEach(function(m){ %>
                                    <tr>
                                        <td><%= m.month %></td>
                                        <td class="numeric"><%= m.count %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="2" class="empty-row">No monthly data</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Top Requesters removed per user request -->
            </div>

            <!-- Charts for analytics (replaced old placeholders) -->
            <div class="analytics-charts" style="margin-bottom:22px; display:grid; grid-template-columns:repeat(auto-fit,minmax(240px,1fr)); gap:18px;">
                <div class="chart-card">
                    <h2>Requests by Document Type</h2>
                    <canvas id="chart-type" height="140"></canvas>
                </div>
                <div class="chart-card">
                    <h2>Monthly Requests Trend</h2>
                    <canvas id="chart-monthly" height="140"></canvas>
                </div>
                <!-- Top Requesters chart removed per user request -->
            </div>

            <div class="requests-list">
                <h2>Recent Document Requests</h2>
                <div class="requests-list-container">
                    <table class="requests-table">
                    <thead>
                        <tr>
                            <th>Requested</th>
                            <th>Requester</th>
                            <th>Document Type</th>
                            <th>Purpose</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (!(requests && requests.length)) { %>
                        <tr>
                            <td colspan="5" class="empty-row">No document requests found</td>
                        </tr>
                        <% } else { %>
                        <% requests.forEach(function(req){ %>
                        <tr>
                            <td><%= req.requested_at || req.date || (req.created_at ? new Date(req.created_at).toLocaleString() : '') %></td>
                            <td><%= req.requester_name || req.student_name || req.student || req.email || '‚Äî' %></td>
                            <td><%= req.document_type || req.type || '‚Äî' %></td>
                            <td><%= req.purpose || req.reason || '‚Äî' %></td>
                            <td>
                                <% var s = (req.status || '').toString().toLowerCase(); %>
                                <span class="status-pill <%= s === 'pending' ? 'status-pending' : s === 'approved' || s==='ready' ? 'status-approved' : 'status-completed' %>"><%= req.status || 'Pending' %></span>
                            </td>
                        </tr>
                        <% }) %>
                        <% } %>
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Set current date (client-side friendly)
        try {
            const today = new Date();
            document.getElementById('currentDate').textContent = today.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        } catch (e) {}
    </script>
    </script>
    <!-- Polyfill for deprecated DOM mutation events to avoid warnings -->
    <script src="/js/deprecated-dom-events-polyfill.js"></script>
    <!-- Server-provided dashboard data as JSON to avoid EJS inside JS parser context -->
    <script id="dashboard-data" type="application/json"><%- JSON.stringify({ countsByType: countsByType || [], monthlySummary: monthlySummary || [], topRequesters: topRequesters || [] }) %></script>
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function(){
            // Read server-provided JSON from the application/json script tag
            let _dashboard = { countsByType: [], monthlySummary: [], topRequesters: [] };
            try {
                const dataEl = document.getElementById('dashboard-data');
                if (dataEl && dataEl.textContent) {
                    _dashboard = JSON.parse(dataEl.textContent);
                }
            } catch (err) { console.error('Failed to parse dashboard-data', err); }

            const countsByType = _dashboard.countsByType || [];
            const monthlySummary = _dashboard.monthlySummary || [];
            const topRequesters = _dashboard.topRequesters || [];

            // Helper: fallback empty arrays
            const typeLabels = countsByType.map(x => x.type || 'Unknown');
            const typeValues = countsByType.map(x => Number(x.count || 0));

            const monthLabels = monthlySummary.map(x => x.month || '');
            const monthValues = monthlySummary.map(x => Number(x.count || 0));

            const topLabels = topRequesters.map(x => x.name || x.email || 'Unknown');
            const topValues = topRequesters.map(x => Number(x.count || 0));

            // Requests by Document Type (bar)
            try {
                const el = document.getElementById('chart-type');
                if (el) {
                    new Chart(el.getContext('2d'), {
                        type: 'bar',
                        data: {
                            labels: typeLabels,
                            datasets: [{
                                label: 'Requests',
                                data: typeValues,
                                backgroundColor: '#dc2626'
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: { legend: { display: false } },
                            scales: { y: { beginAtZero: true } }
                        }
                    });
                }
            } catch (err) { console.error('Chart (type) error', err); }

            // Monthly trend (line)
            try {
                const el = document.getElementById('chart-monthly');
                if (el) {
                    new Chart(el.getContext('2d'), {
                        type: 'line',
                        data: {
                            labels: monthLabels,
                            datasets: [{
                                label: 'Requests',
                                data: monthValues,
                                borderColor: '#2563eb',
                                backgroundColor: 'rgba(37,99,235,0.08)',
                                tension: 0.3,
                                fill: true
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: { legend: { display: false } },
                            scales: { y: { beginAtZero: true } }
                        }
                    });
                }
            } catch (err) { console.error('Chart (monthly) error', err); }

            // Top Requesters chart removed per user request
        })();
    </script>
</body>
</html>